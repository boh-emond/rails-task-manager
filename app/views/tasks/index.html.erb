<div class="mx-auto" style="width: 600px; p-3">

<div class="card mt-5 mb-2">
    <div class="card-header">
      My tasks List
      </div>
  <ul class="list-group list-group-flush">
    <% @tasks.each do |task| %>
      <li class="list-group-item">
      <%= link_to task.title, task_path(task), class:"btn btn-primary"%> - <%= check_box_tag "task_completed_#{task.id}", '1', task.completed, disabled: true %> - <%= link_to "edit", edit_path(task) %>
      - <%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %></li>
    <% end %>
  </ul>
  </div>

  <%= link_to "create a task", tasks_new_path, class:"btn btn-primary"%>
</div>
